RewriteEngine on
RewriteCond %{HTTP_HOST} ^(www.)?georgeschneeloch.com$
RewriteCond %{REQUEST_URI} !^/_site/

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ /_site/$1

RewriteCond %{HTTP_HOST} ^(www.)georgeschneeloch.com$
RewriteRule ^(/)?$ _site/index.html [L]